@using ToDoList.Models;

@{
  Layout = "_Layout";
}
<div class="container">
<div class="row">
  <div class="col-md-8">

  <h1>To Do List</h1>
  <ul class="list-group">
    @foreach(var item in Model)
    {
      <li class="list-group-item"><strong><a href="/items/@item.GetId()">@item.GetDescription()</a> | @Category.Find(item.GetCategoryId()).GetName()</strong> | <a href="/items/@item.GetId()/update">Edit</a><form class="delete-item" action="/items/@item.GetId()/delete" method="post"><button type="submit" class="btn btn-warning">Delete</button></form> </li>
    }
  </ul>
  <a href="/items/new">Add a new item.</a>

  <form action="/items/delete" method="post">
    <button class="btn btn-danger" type="submit" name="button">Clear All Items</button>
  </form>

    </div>
  </div>
</div>
