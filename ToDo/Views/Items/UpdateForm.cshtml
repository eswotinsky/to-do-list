@{
  Layout = "_Layout";
}
<div class="container">
  <h1>To Do List</h1>
  <hr />
  <h2>Edit category: @Model.GetDescription()</h2>
  <form action="/items/@Model.GetId()/update" method="post">
    <div class="form-group">
      <label for="edit-name">Name:</label>
      <input type="text" name="edit-name" value="@Model.GetDescription()">
    </div>
    <div class="form-group">
      <label for="category">Category:</label>
      <select name="edit-category">
        <option value="1">Housework</option>
        <option value="2">Business</option>
        <option value="3">Personal</option>
      </select>
    </div>
    <button class="btn btn-primary"type="submit">Edit</button>
  </form>
  <h4><a href="/items">Return home</a></h4>
</div>
